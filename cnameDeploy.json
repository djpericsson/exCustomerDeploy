{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "customerName": {
            "type": "string"
        },
        "webSiteName": {
            "type": "string"
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Network/dnszones",
            "name": "signupsoftware.com",
            "apiVersion": "2016-04-01",
            "location": "global",
            "properties": {}
        },
        {
            "type": "Microsoft.Network/dnsZones/CNAME",
            "name": "[concat('signupsoftware.com', '/', tolower(parameters('customerName')))]",
            "apiVersion": "2016-04-01",
            "location": "global",
            "dependsOn": ["signupsoftware.com"],
            "properties": {
                "TTL": 3600,
                "CNAMERecord": {
                    "cname": "[concat('https://', parameters('webSiteName'), '.azurewebsites.net')]"
                }
            }
        }
    ]
}
