{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "customerName": {
            "type": "string",
            "defaultValue": "Addlevel DEV"
        },
        "partner": {
            "type": "string",
            "defaultValue": "Addlevel AB"
        },
        "dummy": {
            "type": "string",
            "defaultValue": "16"
        },
        "location": {
            "type": "string",
            "defaultValue": "westeurope"
        }
    },
    "variables": {
        "uniqueCustomerString": "[concat('ex', uniqueString(subscription().subscriptionId, parameters('CustomerName')))]",
        "saasResourceGroupName": "SAASServices",
        "globalConfiguration": {
            "subscriptionId": "[subscription().subscriptionid]",
            "Partner": "[parameters('partner')]",
            "tenantDomain": "tenantName",
            "storage": {
                "type": "Standard_LRS",
                "containers": ["attachments", "documents", "exflowdiagnostics"]
            }
        },
        "globalConfiguration2": "[concat('{\"subscriptionId\":\"', subscription().subscriptionId,'\", \"partner\":\"Addlevel AB\"}')]",
        "globalConfiguration3": "[concat('{\"subscriptionId\":\"', subscription().subscriptionId,'\",\"storage\":{\"containers\":[\"attachments\",\"documents\",\"exflowdiagnostics\"],\"type\":\"Standard_LRS\"},}')]",
        "globalConfiguration4": "[concat('{{\"applicationInsightsInstrumentationKey\":\"AppInsightsKey\",\"APPINSIGHTS_INSTRUMENTATIONKEY\":\"AppInsightsKey\",\"APPINSIGHTS_PORTALINFO\":\"ASP.NET\",\"APPINSIGHTS_PROFILERFEATURE_VERSION\":\"1.0.0\",\"startup.DeploymentName\":\"', variables('uniqueCustomerString'),'\",\"Startup.HostRightPart\":\".', subscription().displayName,'\",\"Startup.AzureKeyVaultURL\":\"CustomerKeyVault\",\"offline_\":\"85.24.197.82\"}}')]"
    },
    "resources": [
        {
            "type": "Microsoft.KeyVault/vaults",
            "name": "[variables('uniqueCustomerString')]",
            "apiVersion": "2018-02-14",
            "location": "[parameters('location')]",
            "properties": {
                "enabledForDeployment": true,
                "enabledForDiskEncryption": false,
                "enabledForTemplateDeployment": true,
                "tenantId": "[subscription().tenantId]",
                "accessPolicies": [],
                "sku": {
                    "name": "Standard",
                    "family": "A"
                }
            }
        },
        {
            "type": "Microsoft.KeyVault/vaults/secrets",
            "name": "[concat(variables('uniqueCustomerString'), '/appSettings')]",
            "apiVersion": "2018-02-14",
            "properties": {
                "contentType": "text/plain",
                "value": "[variables('globalConfiguration4')]"
            }
        }
    ]
}
